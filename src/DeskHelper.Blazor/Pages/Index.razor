@namespace DeskHelper.Blazor

@page "/"
<div class="container-fluid">
    <div class="row pt-2">
        <div class="col">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="card-title">
                        Hostname
                    </h2>
                </div>
                <div class="card-body">
                    <span>
                        @_computerInfo.HostName
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="row pt-2 pb-3">
        <div class="col">
            <NetworkAdaptersCard InputNetworkAdapters="@_computerInfo.NetworkAdapters" />
        </div>
    </div>
</div>